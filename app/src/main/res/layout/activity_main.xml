<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_juego"
        android:id="@+id/textTitulo"
        android:textSize="55dp"
        android:textColor="#080808"
        android:layout_weight="0.07"
        android:gravity="center_horizontal" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="COLOR"
        android:textSize="40dp"
        android:id="@+id/etiColorAleatorio"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.21"
        android:gravity="center_vertical|center_horizontal"
        android:background="#8a8a8a" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CANTIDAD1: "
        android:textSize="25dp"
        android:id="@+id/etiCantidad1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.29"
        android:gravity="center_vertical|center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/etiBuena"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.42"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="   Bien   Mal   "
            android:id="@+id/etiText"
            android:layout_gravity="right"
            android:layout_weight="0.16"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/etiMala"
            android:layout_weight="0.27"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIEN"
            android:id="@+id/button"
            android:layout_weight="0.54"
            android:textSize="20dp"
            android:onClick="metodoBien" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAL"
            android:id="@+id/button2"
            android:layout_weight="0.50"
            android:textSize="20dp"
            android:onClick="metodoMal" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00:00:00"
        android:textSize="25dp"
        android:id="@+id/etiCronometro"
        android:layout_gravity="right"
        android:layout_weight="0.23"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/etiCompara"
        android:layout_weight="0.07" />

</LinearLayout>
